@model Upload.App.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="row justify-content-center">
    <div class=" col-md-9 col-lg-7 col-xl-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Efetue o login</h1>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "E-mail", @class = "form-control form-control-user" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Password", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <input type="submit" value="Entrar" class="btn btn-primary btn-user btn-block" />
        @Html.ActionLink("Cadastrar novo usuário", "Create", null, new { @class = "btn btn-secondary btn-user btn-block" })
    </div>
</div>
    @ViewBag.MessageUserCreate
}
